<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mensageiroinstantaneo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MensageiroInstantaneo">
        <activity android:name=".mensagens.ChatActivity"
            android:windowSoftInputMode="adjustPan"
            android:parentActivityName=".mensagens.UltimasMensagensActivity" />
        <activity
            android:name=".NovaMensagemActivity"
            android:parentActivityName=".mensagens.UltimasMensagensActivity" />
        <activity android:name=".mensagens.UltimasMensagensActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".registrologin.LoginActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".RegistroActivity"
            android:windowSoftInputMode="adjustPan"/>
    </application>

</manifest>